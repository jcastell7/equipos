<p id="notice"><%= notice %></p>

<%= link_to 'Nuevo', new_consumo_path,class:'btn btn-primary btn-sm' %>
<hr>
<table id="consumos_data" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Equipo</th>
      <th>Persona</th>
      <th>Fecha</th>
      <th>Comentario</th>
      <th>Kilometraje</th>
      <th>Cant</th>
      <th>Numfactura</th>
      <th>Idtipoconsumo</th>
      <th>Idestadoconsumo</th>
      <th>Idcategoriaconsumo</th>
      <th>Idunidadmedida</th>
      <th>Idrubro</th>
      <th>Valor</th>
    </tr>
  </thead>

  <tbody>
    <% @consumos.each do |consumo| %>
      <tr>
        <td><%= consumo.equipo_id %></td>
        <td><%= consumo.persona_id %></td>
        <td><%= consumo.fecha %></td>
        <td><%= consumo.comentario %></td>
        <td><%= consumo.kilometraje %></td>
        <td><%= consumo.cant %></td>
        <td><%= consumo.numfactura %></td>
        <td><%= consumo.idtipoconsumo %></td>
        <td><%= consumo.idestadoconsumo %></td>
        <td><%= consumo.idcategoriaconsumo %></td>
        <td><%= consumo.idunidadmedida %></td>
        <td><%= consumo.idrubro %></td>
        <td><%= consumo.valor %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
   jQuery.noConflict();
   jQuery(document).ready(function(){
     jQuery('#consumos_data').DataTable();

   });
</script>
