<p id="notice"><%= notice %></p>

<h1>Equipos</h1>
<%= link_to 'Nuevo', new_equipo_path,class:'btn-primary btn-sm' %>
<%= link_to 'Reporte', reporte_path,class:'btn-primary btn-sm' %>
<hr>

<table  id="equipos_data" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Placa</th>
      <th>Modelo</th>
      <th>Seria</th>
      <th>Marca</th>
      <th>Area</th>
      <th>Kilometraje Inicial</th>
      <th>Kilometraje Actual</th>
      <th>Tipo</th>
      <th>Estado</th>
    </tr>
  </thead>

  <tbody>
    <% @equipos.each do |equipo| %>
      <tr class="active">
        <td><%= link_to "#{equipo.id}", equipo%></td>
        <td><%= equipo.placa %></td>
        <td><%= equipo.modelo %></td>
        <td><%= equipo.seria %></td>
        <td><%= equipo.marca %></td>
        <td><%= equipo.idarea %></td>
        <td><%= equipo.kilometrajeinicial %></td>
        <td><%= equipo.kilometrajeactual %></td>
        <td><%= equipo.idtipoequipo %></td>
        <td><%= equipo.idestadoequipo %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
   jQuery.noConflict();
   jQuery(document).ready(function(){
     jQuery('#equipos_data').DataTable();
   });
</script>
