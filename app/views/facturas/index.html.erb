<p id="notice"><%= notice %></p>

<h1>Facturas</h1>
<%= link_to 'Nuevo', new_factura_path,class:'btn btn-primary btn-sm' %>
<hr>

<table  id="facturas_data" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>N# Facturas</th>
      <th>Fecha</th>
      <th>Concepto</th>
      <th>Valor</th>
      <th>Proveedor</th>
      <th>Comentario</th>
      <th>Estado</th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><a class="llaves" href="/facturas/<%= factura.id %>"><%= factura.id %></a></td>
        <td><%= factura.fecha %></td>
        <td><%= factura.concepto %></td>
        <td><%= factura.valor %></td>
        <td><%= factura.idproveedor %></td>
        <td><%= factura.comentariofactura %></td>
        <td><%= factura.idestadofactura %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
   jQuery.noConflict();
   jQuery(document).ready(function(){
     jQuery('#facturas_data').DataTable();

   });
</script>
